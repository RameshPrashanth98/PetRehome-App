<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="188dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:padding="0dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp">

            <ImageView
                android:id="@+id/ad_box_img"
                android:layout_width="177dp"
                android:layout_height="107dp"
                android:layout_centerHorizontal="true"

                android:layout_marginBottom="80dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.333"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/ad_box_title_dname"
                android:layout_width="158dp"
                android:layout_height="22dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:text="Cute Puppy"
                android:textColor="@color/grey_black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ad_box_img" />

            <TextView
                android:id="@+id/ad_box_breed_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Golden Retriever"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="@+id/ad_box_title_dname"
                app:layout_constraintTop_toBottomOf="@+id/ad_box_title_dname" />

            <TextView
                android:id="@+id/ad_box_location_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="7dp"
                android:text="Malabe, Colombo"
                android:textSize="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/ad_box_gender_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="8dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/ad_box_location_txt"
                app:layout_constraintStart_toStartOf="@+id/ad_box_breed_txt" />

            <ProgressBar
                android:id="@+id/progressBar_listings_img"
                style="?android:attr/progressBarStyle"
                android:layout_width="36dp"
                android:layout_height="37dp"
                android:indeterminateDrawable="@drawable/progressbar"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/ad_box_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/view_count_on_card"
                android:layout_width="52dp"
                android:layout_height="11dp"

                android:textAlignment="textEnd"
                android:textSize="8sp"
                app:layout_constraintBottom_toTopOf="@+id/ad_box_location_txt"
                app:layout_constraintEnd_toEndOf="@+id/ad_box_location_txt" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>